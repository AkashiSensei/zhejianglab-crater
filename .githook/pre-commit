#!/bin/sh

# Unified pre-commit hook that delegates checks to sub-projects
# Only checks sub-projects with changed files

# Fork repository constraint: Prevent modifications to backend, hack, storage, and website directories
# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only 2>/dev/null)

# Check for forbidden directory modifications
FORBIDDEN_CHANGES=""
if echo "$STAGED_FILES" | grep -q "^backend/"; then
    FORBIDDEN_CHANGES="${FORBIDDEN_CHANGES}backend "
fi

if echo "$STAGED_FILES" | grep -q "^hack/"; then
    FORBIDDEN_CHANGES="${FORBIDDEN_CHANGES}hack "
fi

if echo "$STAGED_FILES" | grep -q "^storage/"; then
    FORBIDDEN_CHANGES="${FORBIDDEN_CHANGES}storage "
fi

if echo "$STAGED_FILES" | grep -q "^website/"; then
    FORBIDDEN_CHANGES="${FORBIDDEN_CHANGES}website "
fi

if [ -n "$FORBIDDEN_CHANGES" ]; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "âŒ Commit Rejected"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "You are working in a fork repository where modifications to the following"
    echo "directories are restricted:"
    echo ""
    for dir in $FORBIDDEN_CHANGES; do
        echo "  - $dir"
    done
    echo ""
    echo "This restriction is in place because the corresponding GitHub Actions workflows"
    echo "have been disabled in this fork."
    echo ""
    echo "Please only make changes to the frontend directory in this fork repository."
    echo ""
    echo "If you need to modify these components, please do so in the original repository."
    echo ""
    exit 1
fi

# Ensure we're in the repository root directory
# Git hooks are executed from the repository root, but we verify this
if [ ! -d ".git" ] && [ ! -f ".git" ]; then
    # Try to find .git directory by going up
    GIT_ROOT=$(git rev-parse --show-toplevel 2>/dev/null)
    if [ -n "$GIT_ROOT" ]; then
        cd "$GIT_ROOT" || exit 1
    fi
fi

# If no staged files, check if there are modified files
if [ -z "$STAGED_FILES" ]; then
    # Check if there are any modified files (not staged)
    MODIFIED_FILES=$(git diff --name-only 2>/dev/null)
    if [ -n "$MODIFIED_FILES" ]; then
        echo ""
        echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
        echo "âš ï¸  Warning: No staged files found, but there are modified files"
        echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
        echo ""
        echo "Please stage your files first using 'git add' before committing."
        echo ""
        echo "Modified files:"
        echo "$MODIFIED_FILES" | sed 's/^/  - /'
        echo ""
        echo "ğŸ’¡ Tip: You can also run checks directly in sub-project directories:"
        echo "   cd frontend && make pre-commit-check"
        echo "   cd backend && make pre-commit-check"
        echo "   cd storage && make pre-commit-check"
        echo "   cd website && make pre-commit-check"
        echo ""
        exit 0
    fi
    # No staged files and no modified files, exit successfully
    exit 0
fi

# Track if any checks were run
CHECKS_RUN=0

# Check if there are website-related changes
if echo "$STAGED_FILES" | grep -q "^website/"; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "ğŸŒ Website Checks"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    if (cd website && make pre-commit-check); then
        echo "âœ… Website checks passed!"
        CHECKS_RUN=1
    else
        echo "âŒ Website checks failed!"
        exit 1
    fi
fi

# Check if there are frontend-related changes
if echo "$STAGED_FILES" | grep -q "^frontend/"; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "ğŸ¨ Frontend Checks"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    if (cd frontend && make pre-commit-check); then
        echo "âœ… Frontend checks passed!"
        CHECKS_RUN=1
    else
        echo "âŒ Frontend checks failed!"
        exit 1
    fi
fi

# Check if there are backend-related changes
if echo "$STAGED_FILES" | grep -q "^backend/"; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "ğŸ”§ Backend Checks"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    if (cd backend && make pre-commit-check); then
        echo "âœ… Backend checks passed!"
        CHECKS_RUN=1
    else
        echo "âŒ Backend checks failed!"
        exit 1
    fi
fi

# Check if there are storage-related changes
if echo "$STAGED_FILES" | grep -q "^storage/"; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "ğŸ’¾ Storage Checks"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    if (cd storage && make pre-commit-check); then
        echo "âœ… Storage checks passed!"
        CHECKS_RUN=1
    else
        echo "âŒ Storage checks failed!"
        exit 1
    fi
fi

# Output final summary if any checks were run
if [ $CHECKS_RUN -eq 1 ]; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "âœ… All checks passed!"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
else
    # No checks were run, but there are staged files
    # This means staged files are not in any monitored sub-project directory
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "âœ… No checks to run"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
fi

exit 0
